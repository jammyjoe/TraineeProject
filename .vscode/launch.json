{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [

        {
            "type": "chrome",
            "request": "launch",
            "name": "API Launch Chrome against localhost",
            "url": "http://localhost:5019/swagger/index.html",
            "webRoot": "${workspaceFolder}/PokedexApi",
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Angular Launch Chrome against localhost",
            "url": "http://localhost:4200/",
            "webRoot": "${workspaceFolder}/PokedexApp",
            "sourceMaps": true,
            "trace": true,
            "sourceMapPathOverrides": {
              "webpack:///src/*": "${webRoot}/src/*"
            }
        }
    ]
}